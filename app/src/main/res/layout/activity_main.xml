<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/asıL_arkaplan"
    android:backgroundTint="@color/asıL_arkaplan"
    android:orientation="vertical"
    tools:context=".newNote">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="-1"
            android:clickable="true"
            app:backgroundTint="@color/asıL_arkaplan"
            app:srcCompat="@drawable/ic_baseline_west_24"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/delete_tic_button"
            style="@style/little_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:tint="#FF5722"
            app:backgroundTint="@color/asıL_arkaplan"
            app:fabSize="normal"
            app:rippleColor="#FF5722"
            app:srcCompat="@drawable/ic_baseline_delete_outline_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/save_tic_button"
            style="@style/little_button_style"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            app:backgroundTint="@color/asıL_arkaplan"
            app:backgroundTintMode="add"
            app:rippleColor="#4CAF50"
            app:srcCompat="@drawable/ic_baseline_done_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <EditText
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Title"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/notesText"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        android:gravity="center|top"
        android:hint="Notes"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textAlignment="viewStart"
        android:textDirection="firstStrongRtl" />

    <Button
        android:id="@+id/clear_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:padding="10dp"
        android:text="@string/clear"
        android:textColorHighlight="#FF5722"
        android:textColorLink="#FF5722"
        app:rippleColor="#FFFFFF" />


</LinearLayout>